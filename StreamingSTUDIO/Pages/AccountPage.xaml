<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StreamingSTUDIO.Pages.AccountPage"
             Title="Conta">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="15" VerticalOptions="Center">
            <Label Text="Nome:" FontSize="18" FontAttributes="Bold"/>
            <Label x:Name="NomeUsuarioLabel" FontSize="16"/>

            <Label Text="Email:" FontSize="18" FontAttributes="Bold"/>
            <Label x:Name="EmailUsuarioLabel" FontSize="16"/>

            <Button Text="Logout" 
                    BackgroundColor="Red" 
                    TextColor="White"
                    Clicked="OnLogoutClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
