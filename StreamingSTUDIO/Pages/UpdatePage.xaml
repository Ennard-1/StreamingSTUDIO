<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Class="StreamingStudio.Pages.UpdatePage"
             Title="Atualizar Vídeo">
    <VerticalStackLayout Padding="10" Spacing="10">
        <Entry x:Name="TituloEntry" Placeholder="Título" />
        <Entry x:Name="TipoEntry" Placeholder="Tipo" />
        
        <Button Text="Selecionar Thumbnail" Clicked="OnSelectThumbnailClicked" />
        <Button Text="Selecionar Vídeo" Clicked="OnSelectVideoClicked" />
        
        <Button Text="Atualizar" Clicked="OnUpdateClicked" />
    </VerticalStackLayout>
</ContentPage>
