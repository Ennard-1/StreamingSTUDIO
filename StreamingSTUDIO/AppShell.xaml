<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="StreamingSTUDIO.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:StreamingSTUDIO"
    xmlns:pages="clr-namespace:StreamingSTUDIO.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="StreamingSTUDIO">

    <TabBar>
        <ShellContent Title="Home" ContentTemplate="{DataTemplate pages:MainPage}" />
        <ShellContent Title="Conta" ContentTemplate="{DataTemplate pages:AccountPage}" />
    </TabBar>

     <ShellContent Route="login" ContentTemplate="{DataTemplate pages:LoginPage}" />
    <ShellContent Route="login_and_register" ContentTemplate="{DataTemplate pages:LoginRegisterPage}" />
    <ShellContent Route="register" ContentTemplate="{DataTemplate pages:RegisterPage}" />
    <ShellContent Route="post" ContentTemplate="{DataTemplate pages:PostPage}" />
    <ShellContent Route="update" ContentTemplate="{DataTemplate pages:UpdatePage}" />

</Shell>
